<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".facebookgiris">

    <TextView
        android:id="@+id/face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="600dp"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fkullanici"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:inputType="text"
        android:text="  Kullanıcı"
        app:layout_constraintBottom_toTopOf="@+id/fsifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/fsifre"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:inputType="text"
        android:text="  Şifre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fkullanici"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/fgiris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/butonarka"
        android:text="GİRİŞ YAP"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fsifre"
        app:layout_constraintStart_toStartOf="@+id/fsifre"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/funut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="270dp"
        android:background="@android:color/transparent"
        android:text="Şifremi Unuttum"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fgiris"
        app:layout_constraintStart_toStartOf="@+id/fgiris"
        app:layout_constraintTop_toBottomOf="@+id/fgiris" />

    <TextView
        android:id="@+id/veya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:text="_________________VEYA__________________"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funut" />

    <Button
        android:id="@+id/fkayit"
        android:layout_width="248dp"
        android:layout_height="43dp"
        android:background="@drawable/editarka"
        android:text="Yeni Hesap Aç"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veya"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/fbaslik"
        android:layout_width="245dp"
        android:layout_height="94dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fkullanici"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/face" />
</androidx.constraintlayout.widget.ConstraintLayout>